{
  "compilerOptions": {
    "module": "NodeNext",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution":"NodeNext",
    "target": "es6",
    "sourceMap": false,
    "outDir": "./lib",
    "rootDir": "./src",
    "skipLibCheck": true,
    "lib": ["ES2017", "DOM"],
    "paths": {
      "@app/*": ["./src/*"]
    }
  },
  "exclude": [
    "./example"
  ]
}